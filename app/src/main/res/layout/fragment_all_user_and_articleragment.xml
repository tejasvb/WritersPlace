<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AllUserAndArticleragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_for_of_search_author_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_for_of_search_author_all"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        tools:ignore="UnknownIdInLayout" />

    <ProgressBar
        android:id="@+id/progress_bar_for_chat_log_result"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="100dp" />
</RelativeLayout>

</FrameLayout>