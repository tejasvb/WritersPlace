<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_single_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">
<LinearLayout
    android:id="@+id/layout_for_single_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/image_for_single_user"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"
    android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/single_row_textView_for_title_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="@string/video_title"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_third_text"
        android:layout_below="@+id/layout_for_single_user"
        />
</RelativeLayout>