        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/profile_of_chat_log"
        android:drawablePadding="0dp"
        android:text="@string/usename"
        android:textColor="#393648"
        android:textSize="15sp" />

    <TextView
